<UserControl
    x:Class="TUMCampusApp.Controls.Widgets.CanteenDummyWidgetControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="UserControl_Loaded"
    MinHeight="100">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Background="{ThemeResource AppBarItemPointerOverBackgroundThemeBrush}"
                    Grid.Row="0">
            <TextBlock x:Name="header_tbx"
                       Text="Loading canteens..."
                       HorizontalAlignment="Center"
                       Margin="0, 5, 0, 5"
                       x:Uid="CanteenDummyWidgetControlHeader"/>
        </StackPanel>
    </Grid>
</UserControl>
