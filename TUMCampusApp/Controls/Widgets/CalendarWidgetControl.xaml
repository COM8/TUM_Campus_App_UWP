<UserControl x:Class="TUMCampusApp.Controls.Widgets.CalendarWidgetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:TUMCampusApp.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             MinHeight="100"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Background="{StaticResource WidgetSecondaryAcrylicElementBrush}">
            <TextBlock x:Name="nextDate_tbx"
                       x:Uid="CalendarWidgetNextDate"
                       Margin="0,5,0,5"
                       HorizontalAlignment="Center"
                       Text="Loading calendar..."/>
        </StackPanel>
        <Grid Grid.Row="1"
              Background="{StaticResource WidgetPrimaryAcrylicElementBrush}">
            <controls:CalendarEntryControl x:Name="entry_cec"
                                           Margin="10"
                                           Background="Red"
                                           Visibility="Collapsed"/>
        </Grid>
    </Grid>
</UserControl>
