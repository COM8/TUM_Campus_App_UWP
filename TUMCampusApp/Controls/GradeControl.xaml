<UserControl
    x:Class="TUMCampusApp.Controls.GradeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        <Grid Margin="10,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="70"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <TextBlock x:Name="name_tbx" TextWrapping="Wrap" Foreground="{StaticResource TumBlueBrush}"/>
                <TextBlock x:Name="description_tbx" TextWrapping="Wrap"/>
                <TextBlock x:Name="profName_tbx" TextWrapping="Wrap"/>
            </StackPanel>
            <TextBlock x:Name="grade_tbx" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Green" FontWeight="Bold"/>
        </Grid>
        <Rectangle Height="2" x:Name="rect" Margin="10, 5, 10, 10" Fill="{StaticResource ApplicationPressedForegroundThemeBrush}"/>
    </StackPanel>
</UserControl>
