<UserControl
    x:Class="TUMCampusApp.controls.CalendarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TUMCampusApp.controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <TextBlock x:Name="calendarEntryName_tbx" Text="Name" FontSize="25" Grid.Row="0" FontWeight="ExtraBold" TextTrimming="CharacterEllipsis"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="20" Text="&#xE816;" Margin="0,0,5,0" Foreground="#FF0065BD"/>
                <TextBlock x:Name="location_tbx" Text="Location" Foreground="#FF0065BD" TextTrimming="CharacterEllipsis"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="20" Text="&#xE787;" Margin="0,0,5,0" Foreground="#FF0065BD"/>
                <TextBlock x:Name="calendar_tbx" Text="Calendar" Foreground="#FF0065BD" TextTrimming="CharacterEllipsis"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
