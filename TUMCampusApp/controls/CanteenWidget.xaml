<UserControl
    x:Class="TUMCampusApp.Controls.CanteenWidget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="UserControl_Loaded">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Tapped="Grid_Tapped">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="main_grid" Background="{ThemeResource AppBarItemPointerOverBackgroundThemeBrush}" Grid.Row="0">
            <Grid Padding="10, 0, 10, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="canteenName_tbx" HorizontalAlignment="Center" Margin="0, 5, 0, 5" Grid.Column="0" TextTrimming="CharacterEllipsis"/>
                <TextBlock x:Name="canteenDate_tbx" HorizontalAlignment="Right" Grid.Column="0" Margin="0, 5, 0, 5"/>
            </Grid>
        </StackPanel>
        <StackPanel x:Name="dishTypes_stckp" Grid.Row="1" Margin="0, 10, 0, 0">
            <!--Dish types-->
        </StackPanel>
    </Grid>
</UserControl>
