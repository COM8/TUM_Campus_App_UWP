<UserControl
    x:Class="TUMCampusApp.Controls.CanteenControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="52*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel Padding="10,10,10,10" Grid.Column="0">
            <TextBlock x:Name="canteenName_tbx" TextTrimming="CharacterEllipsis"/>
            <TextBlock x:Name="canteenAdress_tbx" Foreground="{ThemeResource CalendarDatePickerTextForeground}" TextTrimming="CharacterEllipsis"/>
        </StackPanel>
        <TextBlock x:Name="canteenDistance_tbx" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{StaticResource TUM_blue}" Grid.Column="1"/>
        <Button x:Name="favorite_btn" Grid.Column="2" Background="Transparent" Content="&#xE734;" FontFamily="Segoe MDL2 Assets" Click="favorite_btn_Click" Foreground="{StaticResource TUM_blue}"/>
    </Grid>
</UserControl>
