<Page
    x:Class="TUMCampusApp.pages.setup.SetupPageStep2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Margin="10,10,10,10" Grid.Row="0">
            <TextBlock Text="STEP 2" Foreground="{ThemeResource ApplicationPressedForegroundThemeBrush}"/>
            <Rectangle Height="2" Fill="{ThemeResource ApplicationPressedForegroundThemeBrush}" Margin="0,5,0,5"/>
            <TextBlock Text="You can now enable the Token in TUMonline via Services/Token-Management. Make sure the rights you want to gain the App are set as well under Active Rights." TextWrapping="WrapWholeWords"/>
            <TextBlock Text="Example:" TextWrapping="WrapWholeWords" Margin="0,10,0,0"/>
            <HyperlinkButton x:Name="tumOnline_hbtn" Content="TUMonline" Click="tumOnline_hbtn_ClickAsync" HorizontalAlignment="Center"/>
            <Image Source="ms-appx:///Assets/Images/TUMonlineSetup1.png" MaxWidth="200"/>
            <Image Source="ms-appx:///Assets/Images/TUMonlineSetup2.png" Margin="0,10,0,10"/>
            <Image Source="ms-appx:///Assets/Images/TUMonlineSetup3.png" MaxWidth="200"/>
        </StackPanel>
        <Grid Grid.Row="1" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="skip_btn" Content="Skip" HorizontalAlignment="Stretch" Grid.Column="0" Margin="0,0,1,0" Click="skip_btn_Click"/>
            <Button x:Name="next_btn" Content="Next" HorizontalAlignment="Stretch" Grid.Column="1" Margin="1,0,0,0" Click="next_btn_ClickAsync"/>
        </Grid>
    </Grid>
</Page>
