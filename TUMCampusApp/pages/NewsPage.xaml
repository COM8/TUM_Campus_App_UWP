<Page
    x:Class="TUMCampusApp.Pages.NewsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <Page.Resources>
        <Style TargetType="controls:DropShadowPanel" x:Key="ShadowPanelStyle">
            <Setter Property="BlurRadius" Value="3.6"/>
            <Setter Property="ShadowOpacity" Value="0.52"/>
            <Setter Property="OffsetX" Value="5"/>
            <Setter Property="OffsetY" Value="5"/>
            <Setter Property="Margin" Value="15, 10, 15, 0"/>
            <Setter Property="Color" Value="Black"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        </Style>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPressedForegroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="{ThemeResource AppBarItemPointerOverBackgroundThemeBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="expand_btn" Grid.Column="0" FontFamily="Segoe MDL2 Assets" Content="&#xE019;" Background="Transparent" FontSize="28" Click="expand_btn_Click" Margin="0,0,0,0" HorizontalAlignment="Left"/>
                <Rectangle Grid.Column="1" Width="2" Fill="{ThemeResource AppBarBackgroundThemeBrush}"/>
                <TextBlock x:Uid="ManageSources" Grid.Column="2" Text="Manage Sources" HorizontalAlignment="Left" Margin="10, 0, 0, 0" VerticalAlignment="Center" FontSize="20"/>
            </Grid>
            <ScrollViewer x:Name="newsSources_scv" HorizontalAlignment="Stretch" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Grid.Row="2" Visibility="Collapsed" Height="310" Background="{ThemeResource AppBarItemPointerOverBackgroundThemeBrush}">
                <StackPanel x:Name="newsSources_stckp" VerticalAlignment="Stretch" Margin="0, 10, 0, 0">
                    <!--News Sources-->
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Stretch" Grid.Row="1" IsIndeterminate="True" Visibility="Collapsed"/>

        <controls:PullToRefreshListView x:Name="refresh_pTRV" RefreshRequested="refresh_pTRV_RefreshRequested" OverscrollLimit="0.4" PullThreshold="100" IsPullToRefreshWithMouseEnabled="True" Grid.Row="2" SelectionMode="None">
            <controls:PullToRefreshListView.PullToRefreshContent>
                <TextBlock Text="Pull down to refresh data" Margin="0,0,0,10" FontSize="20" Opacity="0.5"/>
            </controls:PullToRefreshListView.PullToRefreshContent>
            <Grid>
                <StackPanel x:Name="news_stckp" Grid.Row="0" Margin="0,0,0,10" VerticalAlignment="Stretch">
                    <!--News-->
                </StackPanel>
                <Grid x:Name="noNews_grid" Grid.Row="0" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE701;" HorizontalAlignment="Center" Margin="0,20,0,20" FontSize="120" Foreground="#0061b7"/>
                        <TextBlock x:Uid="NewsPageNoNews" Text="No news found! Please come back later." HorizontalAlignment="Center" TextWrapping="WrapWholeWords"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </controls:PullToRefreshListView>
    </Grid>
</Page>
